.index-header {
	background-color: #ffffff;
	height: 50px;
	width: 100%;
	text-align: center;
}
.index-header-tab {
	height: 50px;
	background-color: #ffffff;
	font-size: 16px;
}
.index-header-tab-button {
	display: inline-block;
	width: 12.5%;
	height: 50px;
	line-height: 50px;
}
.index-selected {
	font-size: 18px;
	font-weight: 700;
	color: #007AFF;
}
.index-content {
	width: calc(100% - 20px);
	/* height: 50px; */
	padding: 10px;
}
.index-content-out {
/* 	background-color: #ffffff;
	border-radius: 5px;
	padding: 10px; */
}
.index-time {
	font-size: 14px;
	margin-bottom: 15px;
}
.index-time > ._span {
	color: #999999;
	margin-right: 10px;
}
.index-job {
	width: 100%;
	height: 100px;
	font-size: 10px;
}
.index-job-item {
	width: 20%;
	height: 100%;
	display: inline-block;
	text-align: center;
}
.index-job-item > ._p {
}
.index-job-item-number {
	font-size: 20px;
	font-weight: 700;
	height: 50px;
	line-height: 50px;
}
.index-job-item-error {
	max-width: 55px;
	height: 15px;
	margin: 0 auto;
	display: inline-block;
	line-height: 13px;
	/* height: ; */
}
.index-job-item-error-show {
	background-color: #ffebee;
	color: #FF0000;
	width: 45px;
	height: 13px;
	padding: 5px;
	border: 1px #ff0000 solid;
	border-radius: 2px;
}
.index-new-content-p-z {
	width: 6px;
	height: 6px;
	background-color: #d9d9d9;
	border-radius: 50%;
	margin-left: 2px;
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}
.index-new-content-p-c {
	width: 10px;
	height: 10px;
	border-radius: 50%;
	background-color: #cee0fb;
	position: relative;
	margin-top: 12.5px;
}
.index-new-content-p-c > ._div {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	width: 7px;
	height: 7px;
	border-radius: 50%;
	background-color: #1183FB;
}
.index-new-content-p-type {
	display: inline-block;
	width: 10px;
	margin-left: 10px;
	margin-right: 10px;
	position: relative;
}
.index-new-content-p-active {
	display: inline-block;
	margin-left: 5px;
}
.index-new-content-p-title {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: inline-block;
	margin-left: 5px;
	text-overflow: ellipsis;
	overflow: hidden;
	white-space: nowrap;
}
/*每个页面公共css */
page {
	height: 100%;
	/* background: #1183fb linear-gradient(-90deg, #0a48d1 0%, #1183fb 100%); */
	/* background-color: #1183fb; */
}
uni-page-body, uni-page-refresh {
	height: 100%;
}
._a {
	text-decoration: none;
}
._a:hover {
	color: #000000;
}
._a:visited {
	color: #000000;
}
._a:active {
	color: #000000;
}
._a:link {
	color: #000000;
}


#input {
	width: 100%;
	height: 100%;
}
#input > input {
	border: 1px #999999 solid;
}
#input.has-error {
	color: #ff0000;
}
#input.has-error > input {
	border: 1px #ff0000 solid;
}
#input.has-error > .error-message {
	font-size: 12px;
	height: 20px;
	width: 100%;
}

